{% extends 'base.html.twig' %}

{% block title %}Actors{% endblock %}

{% block body %}
    <h1>Actors</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ actor.role }}</td>
            </tr>
            <tr>
                <th>Films</th>
                <td>
                    {% for actor in actor.getMovies() %}
                        {{ actor.name }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_actors_index') }}">back to list</a>

    <a href="{{ path('app_actors_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actors/_delete_form.html.twig') }}
{% endblock %}
